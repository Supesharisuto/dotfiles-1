[colors]
background = #222
foreground = #7780a1
linecolor = #eee
bordercolor = #333
accent = #e60053

[settings]
screenchange-reload = true

[bar/top]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 22
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}
;border-top-size = 1
;border-top-color = #383c4a

module-margin-left = 1
module-margin-right = 1

font-0 = DejaVuSansMono Nerd Font:size=8;2
font-1 = FontAwesome:size=10;2

modules-left = i3
modules-right = fs memory net cpu xkeyboard xbacklight volume battery date

tray-position = right
tray-padding = 4

[module/i3]
type = internal/i3
index-sort = true
strip-wsnumbers = true
format = <label-state> <label-mode>

label-focused = %name%
label-focused-foreground = #d3dae3
label-focused-background = #383c4a
label-focused-padding = 1
label-unfocused = %name%
;label-unfocused-foreground = #7780a1
label-unfocused-padding = 1
label-urgent = %name%
label-urgent-foreground = #101218
label-urgent-background = #ee829f
label-urgent-padding = 1
label-visible = %name%


[module/cpu]
type = internal/cpu
interval = 2
format = <label>
label = %{F#eee}CPU%{F-} %percentage%%

[module/memory]
type = internal/memory
interval = 2
format = <label>
label = %{F#eee}RAM%{F-} %gb_used%/%gb_free%

[module/fs]
type = internal/fs
mount-0 = /
interval = 30
label-mounted = %{F#eee}/:%{F-} %used%/%total%

[module/net]
type = internal/network
interface = wlp58s0
interval = 2.0
accumulate-stats = true
label-connected = %{F#eee}U%{F-} %upspeed% %{F#eee}D%{F-} %downspeed%

[module/wifi]
type = internal/network
interface = wlp58s0
interval = 2.0
format-connected = <label-connected>
label-connected =  %essid% (%signal%%)
label-disconnected =  not-connected
label-disconnected-foreground = #999

[module/wired]
type = internal/network
interface = eth0
interval = 2.0
format-connected = <label-connected>>
label-connected =  %local_ip%
format-disconnected = <label-disconnected>
label-disconnected =  not connected
label-disconnected-foreground = #999

[module/date]
type = internal/date
label = %{F#eee}%{F-} %date% %time%
date = %A, %b %d
time = %H:%M
interval = 5

[module/xbacklight]
type = internal/xbacklight
format = <label>
label = %{F#eee}%{F-} %percentage%%

[module/volume]
type = internal/volume
