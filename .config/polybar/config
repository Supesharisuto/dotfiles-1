ramp-volume-0 = %{F#eee}%{F-}
ramp-volume-1 = %{F#eee}%{F-}
ramp-volume-2 = %{F#eee}%{F-}

[module/battery]
type = internal/battery
full-at = 98
time-format = %H:%M

format-charging = <label-charging>
label-charging = %{F#eee}%{F-} %percentage%% (%time%)

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%% (%time%)

format-full = <label-full>
label-full = %{F#eee}CPU%{F-} 100%

ramp-capacity-0 = %{F#eee}%{F-}
ramp-capacity-0-foreground = ${colors.accent}
ramp-capacity-1 = %{F#eee}%{F-}
ramp-capacity-1-foreground = ${colors.accent}
ramp-capacity-2 = %{F#eee}%{F-} 

[module/xkeyboard]
